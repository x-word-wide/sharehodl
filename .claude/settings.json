{
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Bash(make *)",
      "Bash(go *)",
      "Bash(pnpm *)",
      "Bash(npm *)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git show*)",
      "Bash(docker-compose *)",
      "Bash(docker *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Edit",
      "Write",
      "Task(*)",
      "WebSearch",
      "WebFetch"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(git push --force*)",
      "Bash(git reset --hard*)",
      "Bash(DROP *)",
      "Bash(DELETE FROM *)",
      "Edit(.env*)",
      "Edit(*secret*)",
      "Edit(*credential*)",
      "Write(.env*)",
      "Write(*secret*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'File modified - remember to update tests and docs if needed'"
          }
        ]
      }
    ]
  }
}
