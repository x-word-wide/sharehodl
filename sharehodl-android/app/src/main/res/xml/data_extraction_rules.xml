<?xml version="1.0" encoding="utf-8"?>
<!--
   Security: Prevent backup of sensitive wallet data
   Only allow backing up non-sensitive preferences
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Do not backup any data to cloud -->
        <exclude domain="root" />
        <exclude domain="file" />
        <exclude domain="database" />
        <exclude domain="sharedpref" />
        <exclude domain="external" />
    </cloud-backup>
    <device-transfer>
        <!-- Do not allow device-to-device transfer -->
        <exclude domain="root" />
        <exclude domain="file" />
        <exclude domain="database" />
        <exclude domain="sharedpref" />
        <exclude domain="external" />
    </device-transfer>
</data-extraction-rules>
